<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" 
          fx:controller="org.example.controllers.MusicBandDialogController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label fx:id="labelName" text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label fx:id="labelCoordinateX" text="X Coordinate:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <Spinner fx:id="xSpinner" editable="true" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label fx:id="labelCoordinateY" text="Y Coordinate:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <Spinner fx:id="ySpinner" editable="true" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label fx:id="labelParticipants" text="Number of Participants:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <Spinner fx:id="participantsSpinner" editable="true" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label fx:id="labelGenre" text="Genre:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <ComboBox fx:id="genreComboBox" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label fx:id="labelStudio" text="Studio:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <TextField fx:id="studioField" GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <HBox alignment="CENTER_RIGHT" spacing="10" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="6">
        <Button fx:id="okButton" text="OK" />
        <Button fx:id="cancelButton" text="Cancel" />
    </HBox>
</GridPane>