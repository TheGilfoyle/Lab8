<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" 
          fx:controller="org.example.controllers.RemoveLowerDialogController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label fx:id="labelThreshold" text="Threshold:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <Spinner fx:id="thresholdSpinner" editable="true" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <HBox alignment="CENTER_RIGHT" spacing="10" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="1">
        <Button fx:id="okButton" text="OK" />
        <Button fx:id="cancelButton" text="Cancel" />
    </HBox>
</GridPane>